# Giga-PDF Environment Configuration for Ploi
# Copy this to .env and configure with your values

APP_NAME="Giga-PDF"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# Ploi-specific settings
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration (Ploi managed)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=gigapdf
DB_USERNAME=gigapdf
DB_PASSWORD=your_database_password_here

# Redis Configuration (Ploi managed)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Broadcasting (Laravel Reverb)
BROADCAST_DRIVER=reverb
REVERB_APP_ID=gigapdf
REVERB_APP_KEY=your_reverb_key_here
REVERB_APP_SECRET=your_reverb_secret_here
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=https
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Mail Configuration (Configure based on your provider)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Storage
FILESYSTEM_DISK=local
# For S3 backups (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Application Settings
MAX_UPLOAD_SIZE=104857600  # 100MB
MAX_STORAGE_PER_TENANT=10737418240  # 10GB
MAX_USERS_PER_TENANT=50

# LibreOffice Settings
LIBREOFFICE_PATH=/usr/bin/libreoffice
LIBREOFFICE_TIMEOUT=120

# OCR Settings
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGES=eng,fra,deu,spa

# Security
TWO_FACTOR_REQUIRED=false
TWO_FACTOR_RECOVERY_CODES=8
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true

# Queue Settings
QUEUE_FAILED_DRIVER=database
HORIZON_PREFIX=horizon:gigapdf:
HORIZON_MEMORY_LIMIT=128
HORIZON_TIME_LIMIT=3600
HORIZON_BALANCE_STRATEGY=auto
HORIZON_MIN_PROCESSES=1
HORIZON_MAX_PROCESSES=10

# Monitoring (optional)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Ploi Webhook (optional)
PLOI_WEBHOOK_URL=

# Backup settings
BACKUP_NOTIFICATION_EMAIL="${MAIL_FROM_ADDRESS}"
BACKUP_DISK=local  # or 's3' for remote backups

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_MINUTE=120

# Feature Flags
ENABLE_OCR=true
ENABLE_ADVANCED_PDF_FEATURES=true
ENABLE_DOCUMENT_SHARING=true
ENABLE_WEBHOOKS=false
ENABLE_API=false